#include <stdio.h>
int main(){
    float pi=3.14;
    float r;
    printf("enter a r");
    scanf("%f",&r);
    printf("area of circle:%f",(pi*r*r));    
    printf("circumference of circle:%f\n",(2*pi*r));
    
    return 0;
}
***********************************************************
OUTPUT
enter value r:56.8
area of circle:10130.393555
circumference of circle:356.704010
